[colors]
background = #10101000
background-alt = ${colors.background}
foreground = #b9b9b9
foreground-alt = ${colors.foreground}
primary = #525252
secondary = #8e8e8e
alert = #7c7c7c

[bar/top1]
monitor = ${env:MONITOR:LVDS-1}
width = 100%
height = 30
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = true

bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

