[colors]
background = #10101000
background-alt = ${colors.background}
foreground = #b9b9b9
foreground-alt = ${colors.foreground}
primary = #525252
secondary = #8e8e8e
alert = #7c7c7c

[bar/top1]
monitor = ${env:MONITOR:LVDS-1}
width = 100%
height = 30
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = true

bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 5
border-color = ${colors.background}

padding-left = 10
padding-right = 10

module-margin-left = 0
module-margin-right = 0

font-0 = scientifica:size=12:antialias=true
font-1 = siji:pixelsize=12

modules-left = keyboard wlan
modules-center = bspwm
modules-right = volume date

;tray-position = right
;tray-padding = 2
;tray-background = #0063ff

wm-restack = bspwm
;wm-restack = i3

override-redirect = true

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[bar/top2]
inherit = bar/top1
monitor = ${env:MONITOR:VGA1}

[module/xwindow]
type = internal/xwindow
label = %title%

[module/bspwm]
type = internal/bspwm

